<div class="container text-center">
 <div class="row">
   <div class="col-xs-12 col-sm-6 col-sm-offset-3">
     <div class="form-post">
       <h1>Allez, on attaque </h1>

       <%= simple_form_for (@procedure) do |f| %>

       <div id="wizard">
          <h3 style="display: none">Keyboard</h3>
          <section>
              <%= f.input :first_name, placeholder: "Vanessaaaaaaa" %>
          </section>
          <h3 style="display: none">Effects</h3>
          <section>
              <%= f.input :last_name, placeholder: "Paradiiiiiiiiis"  %>
          </section>
          <h3 style="display: none">Pager</h3>
          <section>
              <%= f.input :marriage_contract, collection: Procedure::MARIAGES, prompt: "dlfkjlsdkf" %>
          </section>
        </div>

        <% end %>




    </div>
  </div>
</div>
</div>


<% content_for(:after_js) do %>
  <script>
    $("#wizard").steps({
      headerTag: "h3",
      bodyTag: "section",
      transitionEffect: "fade",
      // onStepChanging: function(event, currentIndex){
      //   console.log(currentIndex);

      // },
      onFinished: function(event, currentIndex){
        $(".edit_procedure").submit();
        console.log("Finished");
      }
    });
  </script>
<% end %>



