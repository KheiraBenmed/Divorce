<div class="container text-center">
  <div class="row">
    <div class="col-xs-12">
      <div class="form-post">
        <h1>Allez, on attaque </h1>

        <%= simple_form_for(@procedure) do |f| %>
          <div id="wizard">
            <p class="hidden">Prénom</p>
