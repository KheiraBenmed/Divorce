<% content_for(:after_js) do %>
  <script>
    $("#wizard").steps({
      headerTag: "p",
      bodyTag: "section",
      transitionEffect: "fade",
        // onStepChanging: function(event, currentIndex){
        //   console.log(currentIndex);

        // },
      onFinished: function(event, currentIndex) {
        $(".edit_procedure").submit();
        console.log("Finished");
      }
    });
  </script>
<% end %>



