              <%= f.input :acte_naissance_spouse_cache, as: :hidden %>
              <%= f.input :acte_naissance_children %>
              <%= f.input :acte_naissance_children_cache, as: :hidden %>
              <%= f.input :livret %>
              <%= f.input :livret_cache, as: :hidden %>
              <%= f.input :acte_mariage %>
              <%= f.input :acte_mariage_cache, as: :hidden %>
              <%= f.input :contract_mariage %>
              <%= f.input :contract_mariage_cache, as: :hidden %>
            </section>
            <!-- Second section questions -->
            <p style="display: none">Prénom</p>
            <section>
              <%= f.input :status_pro %>
            </section>
            <p style="display: none">Prénom</p>
            <section>
              <%= f.input :status_pro_conjoint %>
            </section>
            <p style="display: none">Prénom</p>
            <section>
              <%= f.input :bank_account_nb %>
            </section>
            <p style="display: none">Prénom</p>
            <section>
              <%= f.input :vehicle_nb  %>
            </section>
            <p style="display: none">Prénom</p>
            <section>
              <%= f.input :renter_nb  %>
            </section>
            <p style="display: none">Prénom</p>
            <section>
              <%= f.input :owner_nb  %>
            </section>
            <!-- Second section Documents -->
            <p style="display: none">Prénom</p>
            <section>
              <%= f.input :taxe_habitation %>
              <%= f.input :taxe_habitation_cache, as: :hidden %>
              <%= f.input :taxe_fonciere %>
              <%= f.input :taxe_fonciere_cache, as: :hidden %>
              <%= f.input :rent %>
              <%= f.input :rent_cache, as: :hidden %>
              <%= f.input :bills %>
              <%= f.input :bills_cache, as: :hidden %>
              <%= f.input :insurance_vehicle %>
              <%= f.input :insurance_vehicle_cache, as: :hidden %>
              <%= f.input :life_insurance %>
