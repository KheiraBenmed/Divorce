            <!-- Third section questions -->
            <p style="display: none">Nombre de Crédit</p>
            <section>
              <%= f.input :credit_nb  %>
            </section>
            <p style="display: none">Nombre de Crédit</p>
            <section>
              <%= f.input :insurance_nb  %>
            </section>
            <!-- Third section documents -->
            <p style="display: none">Nombre de Crédit</p>
