        <% end %>

        <% if @procedure[:bank_account].nil? %>
          <li>Passeport de votre conjoint</li>
        <% end %>

        <% if @procedure[:carte_grise].nil? %>
          <li>Passeport de votre conjoint</li>
        <% end %>


      </ul>
    </div>
  </div>

  <%= link_to "Accès aux avocats", avocats_path, class: "btn btn-primary", style: "margin: 20px" %>

</div>

