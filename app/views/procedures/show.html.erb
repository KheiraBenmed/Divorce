    <div class="recap">

      <div class="progress-wrap progress" data-progress-percent="<%= (12 - @champ_not_done)*100/12 %>">
        <div class="progress-bar progress"></div>
      </div>

      <h2 style="color: #60919F; font-size: 22px; text-align: left; padding-left: 35px">RECAPITULATIF DE VOTRE PROCEDURE</h2>


      <div class="metrics">
        <% if @champ_not_done == 0 %>
          <div class="metrics-question">
          <i class="fa fa-check" style="font-size: 20px; margin: 5px" aria-hidden="true"></i>
            <p>Vous avez rempli votre questionnaire</p>
          </div>
        <% else %>
          <div class="metrics-question">
          <i class="fa fa-question" style="font-size: 20px; margin: 5px" aria-hidden="true"></i>
          <p><%= (12 - @champ_not_done)*100/12 %> % questions complétées</p>
          </div>
        <% end %>

        <% if @doc - @doc_upload == 0 %>
          <div class="metrics-document">
            <i class="fa fa-check" style="font-size: 20px; margin: 5px" aria-hidden="true"></i>
            <p>Vous avez téléchargé tous les documents</p>
          </div>
        <% else %>
        <div class="metrics-document">
          <i class="fa fa-file-text-o" style="font-size: 20px ; margin: 5px" aria-hidden="true"></i>
          <p><%= @doc_upload * 100/ @doc %> % documents téléchargés</p>
        </div>
        <% end %>
      </div>
      <div class="container-fluid">
        <div class="row no-margin text-left">
          <div class="col-xs-12 col-sm-6 col-lg-4" style="margin-top: 50px">
            <div class="box">
              <p class="title">Nom complet</p>
              <p class="answer"><%= @procedure.full_name %></p>
              <p class="title">Enfants</p>
              <p class="answer"><%= @procedure.child_nb %></p>
              <p class="title">Contrat de mariage</p>
              <p class="answer"><%= @procedure.contract_type %></p>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 col-lg-4" style="margin-top: 50px">
            <div class="box">
              <p class="title">Statut professionnel</p>
              <p class="answer"><%= @procedure.status_pro %></p>
              <p class="title">Statut professionnel du conjoint</p>
              <p class="answer"><%= @procedure.status_pro_conjoint %></p>
              <p class="title">Comptes bancaires communs</p>
              <p class="answer"><%= @procedure.bank_account_nb %></p>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 col-lg-4" style="margin-top: 50px">
