<div class="container text-center">
  <div class="container_recap">
    <br>
    <h1 style="color: #60919F; font-size: 22px">RECAPITULATIF DE VOTRE PROCEDURE</h1>
    <div class="recap">

      <div class="progress-wrap progress" data-progress-percent="25">
        <div class="progress-bar progress"></div>
      </div>
      <h1><%= @procedure.full_name %></h1>
      <div class="metrics">
        <div class="metrics-question">
          <i class="fa fa-question" style="font-size: 20px; margin: 5px" aria-hidden="true"></i>
          <p><%= @champ_not_done %> champs à remplir</p>
        </div>

        <div class="metrics-document">
          <i class="fa fa-file-text-o" style="font-size: 20px ; margin: 5px" aria-hidden="true"></i>
          <p><%= @doc_not_upload %> documents à uploader</p>
        </div>
      </div>

      <div class="button-questionnaire">
          <%= link_to "RETOUR AU QUESTIONNAIRE", edit_procedure_path, style: "color: #60919F" %>
      </div>
      <%= link_to "TROUVER MON AVOCAT", avocats_path, class: "btn btn-call-to-action" %>


      <div class="wrapper">
        <ul class="tabs clearfix" data-tabgroup="first-tab-group">
          <li><a href="#tab1" class="active">Situation familiale</a></li>
          <li><a href="#tab2">Situation financière</a></li>
          <li><a href="#tab3">Situation foncière</a></li>
        </ul>
        <section id="first-tab-group" class="tabgroup">
          <div id="tab1">
            <p>Nombre d'enfants: <%= @procedure.child_nb %></p>
            <p>Contrat de mariage: <%= @procedure.contract_type %></p>
          </div>
          <div id="tab2">
            <div id="bis text-left">
              <p>Votre siuation professionnelle: <%= @procedure.status_pro %></p>
              <p>Siuation professionnelle de votre conjoint: <%= @procedure.status_pro_conjoint %></p>
              </div>
            <div id="bis text-left">
              <p>Nombre de relevé bancaire: <%= @procedure.bank_account_nb %></p>
              <p>Nombre de crédit: <%= @procedure.credit_nb %></p>
            </div>
          </div>
          <div id="tab3">
            <div id="bis text-left">
              <p>Nb de logements dont vous êtes propriétaire: <%= @procedure.owner_nb %></p>
              <p>Nb de logements dont vous êtes locataire: <%= @procedure.renter_nb %></p>
            </div>
            <div id="ter text-left">
              <p>Nb de véhicule en votre possesion: <%= @procedure.vehicle_nb %></p>
              <p>Nb d'assurance en votre possesion: </p>
            </div>

          </div>
        </section>
      </div>
    </div>
  </div>


  <div class="container_docs text-left">
    <p style="color: #60919F"><strong>DOCUMENTS EN ATTENTE DE TELECHARGEMENT</strong></p>
    <div class="row">
      <ul>
      <div class="col-xs-12 col-sm-6 col-lg-4">
        <div class="doc">
          <% if @procedure.full_name != "" %>
            <% if @procedure[:passport].nil? %>
              <div class="doc-description"><ol>Passeport</ol></div>
            <% end %>
          <% end %>
          <div class="doc-category btn-call-to-action text-center">SCANNER OU TELECHARGER</div>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6 col-lg-4">
        <div class="doc">
          <% if @procedure.full_name != "" %>
            <% if @procedure[:passport_spouse].nil? %>
              <div class="doc-description"><ol>Passeport de votre conjoint</ol></div>
            <% end %>
          <% end %>
          <div class="doc-category btn-call-to-action text-center">SCANNER OU TELECHARGER</div>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6 col-lg-4">
        <div class="doc">
          <% if !@procedure.child_nb.nil? %>
            <% if @procedure.child_nb > 0 %>
              <% if @procedure[:passport_children].nil? %>
                <div class="doc-description"><ol>Passeport de vos <%= @procedure.child_nb %> enfants</ol></div>
              <% end %>
            <% end %>
          <% end %>
          <div class="doc-category btn-call-to-action text-center">SCANNER OU TELECHARGER</div>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6 col-lg-4">
        <div class="doc">
          <% if @procedure.full_name != "" %>
            <% if @procedure[:identity].nil? %>
              <div class="doc-description"><ol>Votre carte d'identité</ol></div>
            <% end %>
          <% end %>
          <div class="doc-category btn-call-to-action text-center">SCANNER OU TELECHARGER</div>
        </div>
      </div>


      </ul>
    </div>
  </div>




