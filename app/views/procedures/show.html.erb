            <div class="col-xs-12 col-sm-6 col-lg-4"><div class="doc"><ol>Carte d'identité de votre conjoint</ol></div></div>
          <% end %>
        <% end %>

        <% if !@procedure.child_nb.nil? %>
          <% if @procedure.child_nb > 0 %>
            <% if @procedure[:identity_children].nil? %>
