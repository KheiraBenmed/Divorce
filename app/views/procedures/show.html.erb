              <% end %>
              <p class="title">Véhicules en commun<p>
              <p class="answer"><%= @procedure.vehicle_nb %></p>
              <p class="title">Assurances en commun</p>
              <p class="answer"><%= @procedure.insurance_nb %></p>
            </div>
          </div>
        </div>
      </div>
