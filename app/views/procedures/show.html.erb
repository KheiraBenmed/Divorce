        <% end %>

        <% if @procedure[:unemployment].nil? %>
          <li>Passeport de votre conjoint</li>
        <% end %>

        <% if @procedure[:unemployment_spouse].nil? %>
          <li>Passeport de votre conjoint</li>
        <% end %>

        <% if @procedure[:pro_revenu].nil? %>
          <li>Passeport de votre conjoint</li>
        <% end %>

        <% if @procedure[:pro_revenu_spouse].nil? %>
          <li>Passeport de votre conjoint</li>
        <% end %>

        <% if @procedure[:taxes].nil? %>
          <li>Passeport de votre conjoint</li>
        <% end %>

        <% if @procedure[:taxes_spouse].nil? %>
          <li>Passeport de votre conjoint</li>
        <% end %>

        <% if @procedure[:property].nil? %>
          <li>Passeport de votre conjoint</li>
        <% end %>

        <% if @procedure[:revenu_foncier].nil? %>
